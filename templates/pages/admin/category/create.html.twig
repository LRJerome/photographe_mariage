{% extends "themes/base_admin.html.twig" %}
{% block title %}Nouveau mariage
{% endblock %}
{% block description %}Nouveau mariage
{% endblock %}


{% block main %}
	<div class="fs-4">
		<h2 class="F5EBE0 text-center p-3 m-5 fs-1 border border-dark rounded shadow">Ajouter un mariage</h2>
	</div>
	<div class="container my-5 border border-dark rounded shadow p-3 head_text ">
		<div class="d-flex justify-content-center ">

			<h2 class=" d-inline-block text-center p-2">Ajoutez les nouveaux mariages ici</h2>
		</div>
		<div class="row">

			<div class="col-md-8 col-lg-6 mx-auto">


				{{form_start(form)}}
				<div class="mb-3">
					<label for="category_form_name">
						Nom
						<span class="text-danger">*</span>
					</label>
					<div class="text-danger">{{form_errors(form.name)}}</div>
					{{form_widget(form.name, {'attr':{'class':'formulaire form-control','autofocus':'autofocus'}})}}
				</div>
				<div class="mb-3">
					<label for="category_form_user">
						Email du client
						<span class="text-danger">*</span>
					</label>
					<div class="text-danger">
						{{form_errors(form.user)}}
					</div>
					{{form_widget(form.user, {'attr':{'class':'formulaire form-control'}})}}
				</div>
				<div class="mb-3">
					<label for="category_form_description">
						Description
					</label>
					<div class="text-danger">{{form_errors(form.description)}}</div>
					{{form_widget(form.description, {'attr':{'class':'formulaire form-control', 'rows':'10'}})}}
				</div>
				<div class="mb-3">
					<label for="">
						Date du mariage
					</label>
					<div class="text-danger">{{form_errors(form.weddingDateAt)}}</div>
					{{form_widget(form.weddingDateAt, {'attr':{'class':'formulaire form-control'}})}}
				</div>
				<div class="mb-3 text-center fs-4">
					<label class="p-3" for="category_form_photos">
						Ajouter une ou des photos
					</label>
					<div class="text-danger">{{form_errors(form.description)}}</div>
					<div id="category_form_photos">
						{{form_row(form.imageFiles, {'attr':{'class':'formulaire form-control'}})}}
					</div>
				</div>
				<div class="mb-3 d-flex justify-content-between">
					<input formnovalidate type="submit" class="border border-dark btn F5EBE0 btn-block btn-lg mx-5" value="CrÃ©er">
					<a href="{{ path('admin_category_index') }}" class="border border-dark btn F5EBE0 btn-block btn-lg mx-5">Annuler</a>
				</div>
				{{form_end(form)}}

			</div>
		</div>
	</div>
{% endblock main %}
