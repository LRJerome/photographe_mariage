{% endblock %}

{% block main %}
	<div class="fs-4">
		<h2 class="head_text text-center p-3 m-5 fs-1 border border-dark rounded shadow">Bienvenu sur votre espace administrateur,
			{{app.user.firstName}}!</h2>

		<div class="container">
			<div class="row d-flex justify-content-center">

				<div class="container">
					<div class="row d-flex justify-content-center">
						<div class="stats-admin col-md-4 col-lg-3 border border-dark rounded text-center p-0 m-3">
							<h3 class="head_text p-2 rounded border-bottom border-dark">Nombres de catégories</h3>
							<p class="p-3 fs-3">
								<i class="fa-regular fa-image"></i>
