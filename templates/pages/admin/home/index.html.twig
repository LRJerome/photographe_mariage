{% extends "themes/base_admin.html.twig" %}
{% block title %}Espace d'administration
{% endblock %}
{% block description %}Espace d'administration
{% endblock %}

{% block main %}
	<div class="fs-4">
		<h2 class="F5EBE0 text-center p-3 m-5 fs-1 border border-dark rounded shadow">Bienvenu sur votre espace administrateur,
			{{app.user.firstName}}!</h2>

		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-4 col-lg-3 m-2">
					<div class="stats-admin border border-dark rounded text-center p-0">
						<h3 class="head_text p-2 rounded border-bottom border-dark">
							<a href="{{path('admin_category_index')}}">Nombres de galeries</a>
						</h3>
						<p class="p-3 fs-3">
							<i class="fa-regular fa-image"></i>
							{{ categoryCount }}
						</p>
					</div>
				</div>

				<div class="col-md-4 col-lg-3 m-2">
					<div class="stats-admin border border-dark rounded text-center p-0">
						<h3 class="head_text p-2 rounded border-bottom border-dark">
							<a href="{{path('admin_contact_index')}}">Nombres de messages</a>
						</h3>
						<p class="p-3 fs-3">
							<i class="fa-regular fa-message"></i>
							{{ contactMessageCount }}
						</p>
					</div>
				</div>

				<div class="col-md-4 col-lg-3 m-2">
					<div class="stats-admin border border-dark rounded text-center p-0">
						<h3 class="head_text p-2 rounded border-bottom border-dark">
							Nombres de contacts
						</h3>
						<p class="p-3 fs-3">
							<i class="fa-solid fa-address-book"></i>
							{{ uniqueContactsCount }}
						</p>
					</div>
				</div>

				<div class="col-md-4 col-lg-3 m-2">
					<div class="stats-admin border border-dark rounded text-center p-0">
						<h3 class="head_text p-2 rounded border-bottom border-dark">
							Nombres d'utilisateurs
						</h3>
						<p class="p-3 fs-3">
							<i class="fa-regular fa-user"></i>
							{{ userCount }}
						</p>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
