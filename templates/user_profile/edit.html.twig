{% extends 'themes/base.html.twig' %}

{% block title %}Profil de l'utilisateur
{% endblock %}

{% block description %}Voici la page pour modifier le profil utilisateur
{% endblock %}

{% block keywords %}Modification, profil, utilisateur, mariage
{% endblock %}


{% block main %}
	<div class="head_text container my-5 border border-dark rounded shadow p-3">
		<div class="d-flex justify-content-center">
			<h2 class="d-inline-block text-center p-2">Ici vous pouvez modifier vos coordonnées</h2>
		</div>
	</div>

	<div class="table-responsive text-center w-50 mx-auto">
		{{ form_start(form) }}
		<table class="table table-striped table-hover table-bordered text-center border border-dark fs-5">
			<tbody>
				<tr>
					<th class="">Votre Prénom :</th>
					<td>{{ form_widget(form.firstName, {'attr': {'class': 'text-center form-control fs-5'}}) }}</td>
				</tr>
				<tr>
					<th>Votre Nom :</th>
					<td>{{ form_widget(form.lastName, {'attr': {'class': 'text-center form-control fs-5'}}) }}</td>
				</tr>
				<tr>
					<th>Votre E-mail :</th>
					<td>{{ form_widget(form.email, {'attr': {'class': 'text-center form-control fs-5'}}) }}</td>
				</tr>
				<tr>
					<th>Votre numéro de téléphone :</th>
					<td>{{ form_widget(form.phoneNumber, {'attr': {'class': 'text-center form-control fs-5'}}) }}</td>
				</tr>
				<tr>
					<th>Votre adresse postale :</th>
					<td>{{ form_widget(form.adress, {'attr': {'class': 'text-center form-control fs-5'}}) }}</td>
				</tr>
			</tbody>
		</table>
		<div class="mt-5 d-flex justify-content-between">
			<button type="submit" class="border border-dark btn head_text btn-block btn-lg mx-5 fs-3">
				{{ button_label|default('Mise à jour') }}
			</button>
			
			<a href="{{ path('app_user_profile_show') }}" class="border border-dark btn head_text btn-block btn-lg mx-5 fs-3">Retour au profil utilisateur</a>
		</div>
		{{ form_end(form) }}
	</div>


{% endblock %}
